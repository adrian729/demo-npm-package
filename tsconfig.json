{
    "compilerOptions": {
        /* Base Options: */
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "verbatimModuleSyntax": true,

        /* Strictness */
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,

        /* If transpiling with TypeScript: */
        // "module": "NodeNext", -- changed when tsup
        "module": "Preserve",
        // "outDir": "dist", -- removed with tsup
        // "rootDir": "src", -- removed with tsup
        // "sourceMap": true, -- removed with tsup

        /* AND if you're building for a library: */
        // "declaration": true,

        /* AND if you're building for a library in a monorepo: */
        // "declarationMap": true,

        /* tsup - ts linting */
        "noEmit": true
    }
}
